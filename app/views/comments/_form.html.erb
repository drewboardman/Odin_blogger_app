<form role="form">
	<%= form_for([@article, @article.comments.build]) do |f| %>
	  <p>
	  <div class="form-group">		
	    <%= f.label :commenter %><br>
	    <%= f.text_field :commenter %>
	  </div>
	  </p>
	  <p>
	    <%= f.label :body %><br>
	    <%= f.text_area :body %>
	  </p>
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>
</form>